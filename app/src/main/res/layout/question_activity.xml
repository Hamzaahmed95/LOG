<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient4"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:paddingBottom="50dp"
            android:id="@+id/Username"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:fontFamily="sans-serif-condensed"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="FAVOURITE PLAYER OF LOG 2017 ?"
            android:id="@+id/FavPlayer"/>


        <Spinner
            android:id="@+id/favTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gradient4"
            android:popupBackground="@drawable/bg_gradient4"
            android:layout_marginRight="10dp"
            android:spinnerMode="dropdown" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@android:color/white"
            android:textColor="@color/darkMaroon"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/button_text_send"
            android:id="@+id/sendButtonQuesion"/>
    </LinearLayout>
</LinearLayout>