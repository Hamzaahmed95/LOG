<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Goals"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:hint="Goals"/>
        <EditText
            android:id="@+id/Assist"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assist"/>
        <EditText
            android:id="@+id/CleanSheet"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cleansheet"/>

        <EditText
            android:id="@+id/PenaltySaved"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="penaltySave"/>
        <EditText
            android:id="@+id/count"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Count"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/send"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share points"
            android:id="@+id/sharepoints"/>



    </LinearLayout>



</LinearLayout>