<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient14"
    android:layout_width="match_parent"
    android:gravity="center|top|left"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:background="#3b5998"
        android:padding="10dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_gravity="top|left"
            android:src="@drawable/left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="25dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <ImageView
            android:layout_width="60dp"
            android:paddingTop="10dp"
            android:layout_height="60dp"
            android:src="@drawable/floggg"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:text="Fantasy League of Glory"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:background="#293e6a"
            android:gravity="left"
            android:paddingRight="50dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="15,123 Points"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:background="#293e6a"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Rank: 13"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/pickTeam"
            android:background="#20000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:src="@drawable/pickk"
                android:background="@drawable/circleflog"
                android:layout_height="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Pick Team"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/selectedplayer"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#30000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"

                android:src="@drawable/transfers"
                android:background="@drawable/circleflog"
                android:layout_height="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Your Players"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#40000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:src="@drawable/fixtures"
                android:background="@drawable/circleflog"
                android:layout_height="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Fixures"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"

            android:background="#50000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:src="@drawable/result"
                android:background="@drawable/circleflog"
                android:layout_height="40dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="Result"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>